configuration {
  modes: "drun";
  display-drun: "Search: ";
  font: "RobotoMono Nerd Font 11";
}

* {
  black: #222222;
  white: #F5EEE6;
  grey: #767676;
}

window {
  anchor: north;
  location:north;
  height: 32px;
  width: 100%;
  border: 0;
  children: [horibox];
  background-color: @black;
  padding: 0.3em 0.4em;
}

horibox {
  orientation: horizontal;
  children: [prompt, entry, listview, num-filtered-rows];
}

textbox {
  border: 1px;
  text-color: @white;
}

prompt {
  text-color: @white;
}

entry {
  expand: false;
  placeholder: "";
  text-color: @white;
  width: 10em;
}

listview {
  border: 0;
  padding: 0;
  layout: horizontal;
}

num-filtered-rows {
  text-color: @white;
}

element {
  text-color: @grey;
  padding: 0 1em;
}

element normal normal {
  background-color: @black;
  text-color: @grey;
}

element normal active {
  background-color: @black;
  text-color: @grey;
}

element alternate normal {
  background-color: @black;
  text-color: @grey;
}

element alternate active {
  background-color: @black;
  text-color: @grey;
}

element selected normal {
  background-color: @black;
  text-color: @white;
}

element selected active {
  background-color: @black;
  text-color: @white;
}
